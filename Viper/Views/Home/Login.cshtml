<script type="text/javascript">
    $(function () {
        var Account = $("input[name=Account]").val();
        if (Account == "") {
            $("input[name=Account]").focusin();
        } else {
            $("input[name=Pwd]").fadeIn();
        }
        $(document).keydown(function (event) {
            switch (event.which) {//回车提交
                case 13:
                    login();
                    break;
                default:
                    break;
            }
        });
        $("input[type=button]").click(login);

        $("input[name=Account]").focusin(MsgClear);
        $("input[name=Pwd]").focusin(MsgClear);
        function MsgClear() {
            $("#msg").text("");
        }
    });
</script>
